html
    head
        title Magic Smoke Config
        link(rel='icon' href='/images/msmoke_logo.png')
        link(href='/css/fading.css', rel='stylesheet')
        link(href='/css/res_colors.css', rel='stylesheet')
        link(href='/css/generic.css', rel='stylesheet')
    body
        header
            h1 Magic Smoke Config
            nav
                ul
                    li
                        a(href="/") home
                    li
                        a(href="/config") config
                    li
                        a(href="/status") status
                    li(class="dropdown")
                        a(href="/boards") boards
                        div(class="dropdown-content")
                            each board in boardinfo
                                a(href="/board/"+board.sname) #{ board.name }
                    li
                        a(href="/show") show
        main
            section(class="hero")
                div(class="hero-content")

                    hr
                    table
                        tbody
                            tr(class="navlike")
                                td
                                    a(href="/configgroups") Configure Groups
                                td
                                td(class="dropdown")
                                    a(href="/boards") Configure Boards
                                    div(class="dropdown-content")
                                        each board in boardinfo
                                            a(href="/configboards/"+board.sname) #{ board.name }

                    hr
                    form(action="showupload" method="post" enctype="multipart/form-data")
                        input(class="buttontiny" type="file" name="filetoupload")
                        input(class="buttontiny" type="submit" value="Upload a Show File")
                    hr
                    a(class="buttontiny" href="/downloadshow") Download Show File
                    hr


